generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String?
  roles    Role[]  @default([USER])

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
